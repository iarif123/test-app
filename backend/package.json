{
  "name": "test-app-backend",
  "version": "0.0.0",
  "description": "",
  "author": "Irteza Arif",
  "license": "MIT",
  "homepage": "",
  "main": "dist/src/index.js",
  "scripts": {
    "clean-all": "rm -rf dist/** tmp/** node_modules/** package-lock.json",
    "clean": "rm -rf dist/**",
    "prod:start": "node dist/src/index.js",
    "prod:build": "npm run prod:build-ts",
    "prod:build-ts": "tsc",
    "dev:build-ts": "tsc --p ./tsconfig.dev.json",
    "dev:build": "npm run dev:build-ts && npm run dev:tslint",
    "dev:watch": "tsc-watch --p ./tsconfig.dev.json --onSuccess \"node dist/src/index.js\"",
    "dev:watch-test": "npm run test --watchAll",
    "dev:watch-unit-tests": "jest --watchAll --silent \\\\.test\\\\.",
    "dev:tslint": "tslint --config ./tslint.json --project ./tsconfig.dev.json",
    "dev:debug": "npm run dev:build && npm run dev:watch-debug",
    "dev:watch-debug": "tsc-watch --p ./tsconfig.dev.json --onSuccess \"node --inspect=0.0.0.0:9229 dist/src/index.js\"",
    "dev:watch-debug-docker": "tsc-watch --p ./tsconfig.dev.json --onSuccess \"node --inspect-brk=0.0.0.0:9229 dist/src/index.js\"",
    "dev:format": "prettier --write 'src/**/*.ts'",
    "dev:test": "npm run dev:build && npm run test",
    "integration-test": "JEST_JUNIT_OUTPUT=reports/integration-tests/junit-test-results.xml jest dist/integration-tests/ --forceExit --coverage --verbose --runInBand --passWithNoTests --config=jest.integration.config.js",
    "test": "JEST_JUNIT_OUTPUT=reports/unit-tests/junit-test-results.xml jest src/ --forceExit --coverage --verbose --runInBand --passWithNoTests --config=jest.unit.config.js",
    "test-debug": "JEST_JUNIT_OUTPUT=reports/unit-tests/junit-test-results.xml node --inspect-brk=0.0.0.0:9119 node_modules/.bin/jest dist/src/ --forceExit --coverage --verbose --runInBand --config=jest.unit.config.js",
    "integration-test:debug": "JEST_JUNIT_OUTPUT=reports/integration-tests/junit-test-results.xml node --inspect=0.0.0.0:9119 node_modules/.bin/jest dist/integration-tests/ --forceExit --coverage --verbose --runInBand --passWithNoTests --config=jest.integration.config.js",
    "jest": "jest"
  },
  "devDependencies": {
    "@tsed/testing": "^5.44.17",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.17.0",
    "@types/jest": "24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/method-override": "0.0.31",
    "@types/mysql": "^2.15.6",
    "@types/node": "^12.12.28",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "2.0.8",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^9.5.0",
    "prettier": "1.18.2",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0"
  },
  "dependencies": {
    "@tsed/common": "5.44.11",
    "@tsed/core": "5.44.11",
    "@tsed/di": "5.44.11",
    "@tsed/socketio": "5.44.11",
    "@tsed/testing": "5.44.17",
    "avro-cado": "^0.1.1",
    "aws-sdk": "^2.624.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "date-fns": "^2.11.1",
    "express": "^4.17.1",
    "jsonschema": "^1.2.4",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "mysql": "^2.18.1",
    "node-logger": "0.0.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "ts-httpexceptions": "^4.1.0",
    "typeorm": "^0.2.22",
    "typescript": "^3.8.2",
    "uuid": "^3.4.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": "prettier --parser typescript --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged && rm -rf ./dist && npm run dev:test"
    }
  }
}
