{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es7",
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "integration-tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "config",
    "release",
    "src/**/__tests__/**"
  ]
}
